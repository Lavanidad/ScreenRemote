<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="#0170C0"
                android:endColor="#4C9EEB"
                android:useLevel="true"
                android:angle="0"
                android:centerX="0"
                android:centerY="0"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <stroke android:width="1dp" android:color="#ff0271c0" />
            <corners android:radius="6dp"/>
            <item android:name="android:shadowColor">#473897f3</item>
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">1</item>
        </shape>
    </item>
</selector>