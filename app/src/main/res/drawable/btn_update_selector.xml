<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <stroke android:width="1dp" android:color="#ff0271c0" />
            <corners android:topLeftRadius="35dp" android:topRightRadius="35dp" android:bottomLeftRadius="35dp" android:bottomRightRadius="35dp" />
            <item android:name="android:shadowColor">#473897f3</item>
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">1</item>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ff3a8ddc" android:endColor="#ff59afff" android:angle="270" />
            <corners android:topLeftRadius="35dp" android:topRightRadius="35dp" android:bottomLeftRadius="35dp" android:bottomRightRadius="35dp" />
        </shape>
    </item>
</selector>